table
    max-width 800px
    width 100%
    margin 0 auto
    border-collapse collapse

    th
        text-align left
    
    th, td
        padding 5px 15px
    
    tbody
        tr:nth-child(odd)
            background #f2f2f2

.heading
    font-size 1.2rem
    font-weight 500


// Responsive

@media screen and ( max-width: 700px )

    table
        max-width 500px
    
    thead
        display  none
    
    tbody
        tr
            td
                display block

                &:before
                    content attr(aria-label)
                    display inline-block
                    margin-right 10px
                    font-weight 500

                &:last-child
                    text-align right