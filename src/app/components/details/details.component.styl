.content
    max-width 700px
    margin 0 auto

.nav
    display flex
    justify-content space-between
    align-items center

.title-order
    display inline-block
    margin 0

.btn-group
    margin 0 0 20px

    a, button
        min-width 200px

.card
    box-shadow 0 0 3px 1px rgba(black, .1)

    &:not(:last-child)
        margin-bottom 15px

.row
    margin-bottom 20px

.grid
    display flex

.col-img
    width 40%
    padding 20px
    box-sizing border-box

    figure
        display block
        margin 0
    
    img
        display block
        width 100%
        margin 0 auto

.col-content
    background #fafafa
    display flex
    align-items center
    justify-content center
    width 60%
    padding 15px 20px
    box-sizing border-box

.card-content
    margin 0

.price
    color #e53d3d
    font-weight 500

.align-center
    text-align center

.align-right
    text-align right

.success
    display block
    max-width 200px
    width 100%
    margin 0 auto

    img
        display block
        width 100%

.dialog-title
    font-weight 500

.dialog-content
    margin-bottom  30px
    text-align center

.dialog-actions
    text-align center

    button
        background #ff4081
        min-width 150px
        padding 0 15px
        color white
        font-size 1rem
        font-weight 500
        line-height 34px
        border solid 1px rgba(black, .12)
        border-radius 4px
        cursor pointer

        &:focus
            outline none


// Responsive

@media screen and ( max-width: 500px )
    .grid
        display block
    
    .col-img,
    .col-content
        width 100%
    .col-img
        img
            max-width 250px